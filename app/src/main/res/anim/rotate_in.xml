<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="400"
        android:fromAlpha="0"
        android:toAlpha="1" />

    <!--  -100% on x delta will make the item slide in from left to right  -->
    <rotate
        android:duration="400"
        android:fromDegrees="-10"
        android:pivotX="0%"
        android:pivotY="100%"
        android:toDegrees="0" />
</set>