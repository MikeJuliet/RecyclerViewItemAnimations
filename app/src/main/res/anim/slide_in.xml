<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="400"
        android:fromAlpha="0"
        android:toAlpha="1" />

    <!--  -100% on x delta will make the item slide in from left to right  -->
    <translate
        android:duration="400"
        android:fromXDelta="-100%"
        android:toXDelta="0%" />
</set>